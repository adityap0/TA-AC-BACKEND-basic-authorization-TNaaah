<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <header>
    <div>
      <h1>Admin</h1>
      <p>Welcome to THE Podcast</p>
    </div>
    <div>
      <a href="/users/logout"><button>Logout</button></a>
      <a href="/admin/podcast/new"><button>Add Podcast</button></a>
    </div>
  </header>
  <main class="main-podcast">
    <div class="main-podcast-div">
      <h1>FREE CONTENT</h1>
      <ul>
        <%podcasts.forEach((podcast)=>{ if(podcast.category === "FREE"){%>
        <li>
          <div class="content">
            <img src="<%= podcast.image%>" alt="pic" />
            <a href="/admin/podcast/<%= podcast.id%>"><%= podcast.name%></a>
            <p><%= podcast.bio%></p>
            <a href="/admin/podcast/<%= podcast.id%>/edit"
              ><button>EDIT</button></a
            >
            <a href="/admin/podcast/<%= podcast.id%>/delete"
              ><button>DELETE</button></a
            >
          </div>
        </li>
        <%} })%>
      </ul>
    </div>
    <div class="main-podcast-div">
      <h1>VIP CONTENT</h1>
      <ul>
        <%podcasts.forEach((podcast)=>{ if(!(podcast.category === "PREMIUM")){%>
        <li>
          <div class="content">
            <img src="<%= podcast.image%>" alt="pic" />
            <a href="/admin/podcast/<%= podcast.id%>"><%= podcast.name%></a>
            <p><%= podcast.bio%></p>
            <a href="/admin/podcast/<%= podcast.id%>/edit"
              ><button>EDIT</button></a
            >
            <a href="/admin/podcast/<%= podcast.id%>/delete"
              ><button>DELETE</button></a
            >
          </div>
        </li>
        <%} })%>
      </ul>
    </div>
    <div class="main-podcast-div">
      <h1>PREMIUM CONTENT</h1>
      <ul>
        <%podcasts.forEach((podcast)=>{%>
        <li>
          <div class="content">
            <img src="<%= podcast.image%>" alt="pic" />
            <a href="/admin/podcast/<%= podcast.id%>"><%= podcast.name%></a>
            <p><%= podcast.bio%></p>
            <a href="/admin/podcast/<%= podcast.id%>/edit"
              ><button>EDIT</button></a
            >
            <a href="/admin/podcast/<%= podcast.id%>/delete"
              ><button>DELETE</button></a
            >
          </div>
        </li>
        <% })%>
      </ul>
    </div>
  </main>
</html>
